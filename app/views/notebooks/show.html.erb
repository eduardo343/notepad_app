<div class="container mt-4">
  <h1 class="mb-3"><%= @notebook.name %></h1>
   following pages:</p>

    <ul class="list-group mb-3">
      <% @notebook.pages.each do |page| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to "#{page.emoji} #{page.title}", notebook_page_path(@notebook, page), class: "text-decoration-none text-primary" %>
          <div class="d-flex gap-2">
            <%= link_to "✏️", edit_notebook_page_path(@notebook, page), 
                        class: "btn btn-sm btn-outline-secondary", 
                        title: "Edit Page" %>
            <%= button_to "🗑️", notebook_page_path(@notebook, page),
                          method: :delete,
                          data: { turbo_confirm: "Are you sure you want to delete this page?" },
                          form: { class: "d-inline" },
                          class: "btn btn-sm btn-outline-danger" %>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="d-flex gap-2">
      <%= link_to "New Page", new_notebook_page_path(@notebook), class: "btn btn-primary" %>
      <%= link_to "✏️ Edit", edit_notebook_path(@notebook), class: "btn btn-outline-secondary" %>
    </div>
    <%= button_to "Destroy Notebook", @notebook,
          method: :delete,
          data: { turbo_confirm: "Are you serious?" },
          class: "btn btn-danger" %>
  </div>
</div>
