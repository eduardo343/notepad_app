<div class="container mt-4">
  <h1 class="mb-4">My Notebooks</h1>

  <div class="mb-3">
    <%= link_to "New Notebook", new_notebook_path, class: "btn btn-primary" %>
  </div>

  <% if @notebooks.any? %>
    <% @notebooks.each do |notebook| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <a href="<%= notebook_path(notebook) %>" class="text-decoration-none">
          <%= notebook.name %>
        </a>
        <div>
        <%= button_to "Destroy Notebook", notebook,
        method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this notebook?" },
        class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">You haven't created any notebooks yet.</div>
  <% end %>
</div>