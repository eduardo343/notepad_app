<div class="container mt-4">
<h1 class="mb-4">My Notebooks</h1>

<div class="mb-3">
  <%= link_to "New Notebook", new_notebook_path, class: "btn btn-primary" %>
</div>

<% if @notebooks.any? %>
<% @notebooks.each do |notebook| %>
        <a href="<%= notebook_path(notebook) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <%= notebook.name %>
          <span class="text-muted"><%= notebook.created_at.strftime("%d/%m/%Y %H:%M") %></span>
        </a>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">You haven't created any notebooks yet.</div>
  <% end %>
</div>