<%= form_with(model: notebook, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Notebook Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "E.g.: Journal, Ideas, Project X" %>
  </div>
  
  <%= form.submit class: "btn btn-success" %>
  <% end %>
